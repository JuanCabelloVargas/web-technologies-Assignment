<div class="container mt-3">
  <h1 class="mb-3 text-primary">Notifications</h1>

  <% if @notifications.empty? %>
    <p>No notifications.</p>
  <% else %>
    <ul class="list-group">
      <% @notifications.each do |notification| %>
        <li class="list-group-item d-flex justify-content-between align-items-center <%= 'list-group-item-secondary' if !notification.is_read %>">
          <div>
            <%= link_to notification.title, notification_path(notification), class: "fw-bold text-decoration-none" %>
            <small class="text-muted"><%= notification.notification_type.capitalize %></small>
          </div>
          <% unless notification.is_read %>
            <%= link_to "Mark as read", mark_as_read_notification_path(notification), data: { turbo_method: :patch }, class: "btn btn-sm btn-primary" %>

          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
