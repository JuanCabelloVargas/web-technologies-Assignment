<div class="container mt-3">
  <div class="card">
    <div class="card-body">
      <h2 class="text-primary mb-3"><%= @notification.title %></h2>
      <p><strong>Body:</strong> <%= @notification.body %></p>
      <p><strong>Type:</strong> <%= @notification.notification_type.capitalize %></p>
      <p><strong>Read:</strong> <%= @notification.is_read ? "Yes" : "No" %></p>
      <p><strong>Created at:</strong> <%= @notification.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
  </div>
</div>
