<% if comment.errors.any? %>
  <div class="alert alert-danger">
    <p class="mb-1"><strong>Could not save:</strong></p>
    <ul class="mb-0">
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [challenge, comment], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :body, "Comment", class: "form-label" %>
    <%= f.text_area :body, rows: 4, class: "form-control", required: true %>
  </div>
  <div class="d-flex justify-content-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
