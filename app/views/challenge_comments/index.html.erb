<div class="container mt-3">
  <h1 class="mb-3 text-primary">Challenge Comments</h1>
    <ul>
      <% @challenge_comments.each do |comment| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <strong class: "text-primary" >User: </strong> <%= comment.user_id%>
          <strong class: "text-secondary" >Challenge: </strong><%= comment.challenge_id%>
          <%= link_to "view full comment", challenge_comment_path(comment), class: "text-muted" %>
        </li>
      <% end %>
    </ul>
</div>
