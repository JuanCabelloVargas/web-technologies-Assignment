<% if comments.any? %>
  <ul class="list-group list-group-flush">
    <% comments.each do |comment_item| %>
      <li class="list-group-item">
        <div class="d-flex justify-content-between flex-wrap gap-2">
          <div>
            <strong><%= comment_item.user.username %></strong>
            <div class="small text-muted">
              <%= l(comment_item.created_at, format: :short) %>
              <% if comment_item.edited_at.present? %>
                Â· Edited <%= l(comment_item.edited_at, format: :short) %>
              <% end %>
            </div>
          </div>
          <% if current_user && (comment_item.user_id == current_user.id || challenge.creator_id == current_user.id) %>
            <div class="d-flex gap-2">
              <%= link_to "Edit",
                          edit_challenge_challenge_comment_path(challenge, comment_item, anchor: "coments"),
                          class: "btn btn-sm btn-outline-primary" %>
              <%= button_to "Delete",
                            challenge_challenge_comment_path(challenge, comment_item),
                            method: :delete,
                            data: { confirm: "Delete this comment?" },
                            class: "btn btn-sm btn-outline-danger" %>
            </div>
          <% end %>
        </div>
        <p class="mb-0 mt-2"><%= simple_format(comment_item.body) %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="mb-0 text-muted">No comments yet.</p>
<% end %>
