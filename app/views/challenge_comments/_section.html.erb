<div class="row g-3">
  <div class="col-lg-7">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Comments</h5>
        <%= render partial: "challenge_comments/list", locals: { comments: comments, challenge: challenge } %>
      </div>
    </div>
  </div>
  <div class="col-lg-5">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Add comment</h5>
        <% if current_user %>
          <%= render partial: "challenge_comments/form",
                     locals: { challenge: challenge, comment: comment } %>
        <% else %>
          <p class="mb-0 text-muted">Sign in to comment.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
