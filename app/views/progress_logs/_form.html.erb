<% if progress_log.errors.any? %>
  <div class="alert alert-danger">
    <p class="mb-1"><strong>Could not save:</strong></p>
    <ul class="mb-0">
      <% progress_log.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [challenge, progress_log], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :progress_value, "Amount", class: "form-label" %>
    <%= f.number_field :progress_value, step: :any, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :unit, "Unit", class: "form-label" %>
    <%= f.text_field :unit, class: "form-control", required: true, maxlength: 10, placeholder: "km, reps, min" %>
  </div>
  <div class="mb-3">
    <%= f.label :logged_at, "Date and time", class: "form-label" %>
    <%= f.datetime_select :logged_at, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label" %>
    <%= f.text_area :description, rows: 3, class: "form-control" %>
  </div>
  <div class="d-flex justify-content-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
