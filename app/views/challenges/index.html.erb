<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-primary mb-0">Challenges</h1>
    <% if current_user %>
      <%= link_to "New challenge", new_challenge_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= form_with url: challenges_path, method: :get, local: true, class: "card card-body mb-4" do |f| %>
    <div class="row g-3 align-items-end">
      <div class="col-md-4">
        <%= f.label :category_id, "Category", class: "form-label" %>
        <%= f.select :category_id,
                     options_for_select([["All", nil]] + @categories.map { |c| [c.name, c.id] }, @filters[:category_id]),
                     {},
                     class: "form-select" %>
      </div>
      <div class="col-md-4">
        <%= f.label :visibility, "Visibility", class: "form-label" %>
        <%= f.select :visibility,
                     options_for_select([["All", nil]] + @visibilities.map { |v| [v.titleize, v] }, @filters[:visibility]),
                     {},
                     class: "form-select" %>
      </div>
      <div class="col-md-4">
        <%= f.label :status, "Status", class: "form-label" %>
        <%= f.select :status,
                     options_for_select([["All", nil]] + @statuses.map { |s| [s.titleize, s] }, @filters[:status]),
                     {},
                     class: "form-select" %>
      </div>
      <div class="col-12 d-flex gap-2">
        <%= f.submit "Filter", class: "btn btn-secondary" %>
        <%= link_to "Clear", challenges_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  <% end %>

  <% if @challenges.any? %>
    <div class="list-group">
      <% @challenges.each do |challenge| %>
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
            <div>
              <h5 class="mb-1">
                <%= link_to challenge.name, challenge_path(challenge) %>
              </h5>
              <div class="text-muted small">
                Category: <%= challenge.category.name %> ·
                Visibility: <%= challenge.visibility.titleize %> ·
                Status: <%= challenge.status.titleize %>
              </div>
              <div class="small">
                From <%= l(challenge.start_date, format: :short) %> to <%= l(challenge.end_date, format: :short) %>
              </div>
            </div>
            <span class="badge bg-light text-dark">Creator: <%= challenge.creator.username %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">No challenges match the selected filters.</div>
  <% end %>
</div>
