<div class="container mt-3">
  <h1 class="mb-3 text-primary">User badges</h1>
    <ul>
      <% @user_badges.each do |ub| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <strong class= "text-primary" >User: </strong> <%= ub.user_id%>
          <strong class= "text-secondary" >Badge: </strong><%= ub.challenge_id%>
          <%= link_to "view full description", user_badge_path(ub), class: "text-muted" %>
        </li>
      <% end %>
    </ul>
</div>
